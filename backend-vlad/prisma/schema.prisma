generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  email      String   @unique
  hash       String
  hashedRt   String?
  username   String   @unique
  superpower String?
  role       Role
  hashPasswordRecovery String?
  medals    Medal[]
  @@map("users")
}

model Medal {
  id            Int @id @default(autoincrement())
  medalString   String? @unique
  status        State
  registerHash  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
  owner         User? @relation(fields: [ownerId], references: [id])
  ownerId       Int
  @@map("medals")
}

model VirginMedal {
  id            Int @id @default(autoincrement())
  medalString   String @unique
  registerHash  String? @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
  status        State
  @@map("virgin_medals")
}

enum Role {
  VISITOR
  FRIAS_EDITOR
  REGISTER
}

enum State {
  VIRGIN
  ENABLED
  DISABLEDn
  DEAD
  REGISTER_PROCESS
}
