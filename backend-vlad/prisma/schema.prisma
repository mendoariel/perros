generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  email      String   @unique
  hash       String
  hashedRt   String?
  username   String   @unique
  superpower String?
  role       Role
  hashPasswordRecovery String?

  @@map("users")
}

model Medal {
  id      Int @id @default(autoincrement())
  email   String?
  medalHash    String? @unique
  status  State
  registerHash String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt()

  @@map("medals")
}

enum Role {
  VISITOR
  FRIAS_EDITOR
  REGISTER
}

enum State {
  VIRGIN
  ENABLED
  DISABLEDn
  DEAD
  REGISTER_PROCESS
}
